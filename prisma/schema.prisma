generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id            String    @id
  name          String?
  email         String?   @unique
  @@map(name: "users")
}

model Prepaid {
  id            String    @id
  email         String   @unique
  address       String   @unique
}